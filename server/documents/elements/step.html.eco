  <div class="example" data-use-content="true">
    <h4 class="ui header">Description</h4>
    <p>A step can contain a description</p>
    <div class="ui steps">
      <div class="step">
        <div class="title">Shipping</div>
        <div class="description">Choose your shipping options</div>
