---
layout      : 'default'
css         : 'comment'
element     : 'comment'
elementType : 'view'
standalone  : true

title       : 'Comment'
description : 'A comment displays user feedback to site content'
type        : 'UI View'

themes      : ['Default', 'Chubby']
---

<%- @partial('header') %>
<link rel="stylesheet/less" type="text/css" href="/src/definitions/views/comment.less" />

