/*-------------------
       Header
--------------------*/

@headerFont : 'Source Sans Pro', Helvetica Neue, Helvetica, Arial, sans-serif;
@fontWeight: bold;
@textTransform: none;

/* HTML Headings */
@h1: 1.33rem;
@h2: 1.2rem;
@h3: 1rem;
@h4: 0.9rem;
@h5: 0.8rem;

/* Sizing */
@hugeFontSize: 1.33em;
@largeFontSize: 1.2em;
@mediumFontSize: 1em;
@smallFontSize: 0.9em;
@tinyFontSize: 0.8em;