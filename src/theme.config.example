@grid       : 'default';
@menu       : 'default';
@message    : 'default';
@table      : 'default';

/* Modules */
@accordion  : 'default';
@chatroom   : 'default';
@checkbox   : 'default';
@dimmer     : 'default';
@dropdown   : 'default';
@modal      : 'default';
@nag        : 'default';
